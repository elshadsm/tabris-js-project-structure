{
  "extends": "../tsconfig.json",
  "include": [
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "../src/**/*.js",
    "../src/**/*.jsx",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.js",
    "./**/*.jsx"
  ],
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@sandbox": [
        "./sandbox"
      ],
      "@resources": [
        "../src/resources"
      ],
      "@repositories/*": [
        "../src/repositories/*"
      ],
      "@common/*": [
        "../src/common/*"
      ],
      "@actions/*": [
        "../src/actions/*"
      ],
      "@models/*": [
        "../src/models/*"
      ],
      "@services/*": [
        "../src/services/*"
      ],
      "@views/*": [
        "../src/views/*"
      ]
    }
  }
}
